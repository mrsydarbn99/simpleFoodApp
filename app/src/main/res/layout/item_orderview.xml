<?xml version="1.0" encoding="utf-8"?>
<!-- Single List Item Design -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:background="@drawable/img13">

    <!-- First column, a ViewGroup using LinearLayout(vertical) for additional details -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Add new TextViews here -->

        <TextView
            android:id="@+id/newTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price (RM):"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/newTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Status:"
            android:textSize="18sp" /><!-- Add more TextViews if needed -->

    </LinearLayout>

    <!-- Second column, another ViewGroup using LinearLayout(vertical) for existing contact details -->
    <LinearLayout
        android:layout_width="228dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- Existing TextViews (Name, Price, Status) -->

        <TextView
            android:id="@+id/tvIdOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPriceOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStatusOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Third column, a ViewGroup using LinearLayout(horizontal) for the button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_delete_24"
            android:onClick="Delete"
            android:text="Delete"
            android:textColor="@android:color/black"
            android:theme="@style/Theme.MyApp"
            app:backgroundTint="@color/btnColorTomato"
            app:cornerRadius="5dp" />

        <!-- You can add additional buttons or views here -->

    </LinearLayout>
</LinearLayout>